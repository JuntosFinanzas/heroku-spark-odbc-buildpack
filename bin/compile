#!/bin/bash

BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

echo "** Install locations"
echo `ls -l $BUILD_DIR/.apt/opt/simba/sparkodbc`
echo `ls -l $BUILD_DIR/.apt/opt/simba/sparkodbc/lib`
echo '--'
echo `ls $BUILD_DIR/.apt/usr/`
echo '--'
echo `ls $BUILD_DIR/.apt/usr/bin` # > iodbcadm-gtk iodbctest
echo `ls $BUILD_DIR/.apt/usr/include`
echo `ls $BUILD_DIR/.apt/usr/lib` # > libdrvproxy.so.2 libdrvproxy.so.2.1.19 libiodbcadm.so.2 libiodbcadm.so.2.1.19 libiodbcinst.so.2 libiodbcinst.so.2.1.19 libiodbc.so.2 libiodbc.so.2.1.19
echo `ls $BUILD_DIR/.apt/usr/share`

# Tell Bundler how to get to the odbc directory
export BUNDLE_BUILD__RUBY_ODBC="--with-odbc-dir=/usr/local/Cellar/libiodbc/3.52.12/"

# Make sure we export the relevant environment variables for later buildpacks
export | grep -E -e '(BUNDLE_BUILD__RUBY_ODBC)='  > "$LP_DIR/export"

exit 1
